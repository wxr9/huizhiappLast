extends ./layout
block head
    title 优惠管理
    link(rel="stylesheet", href="/admin/css/index.css")
block body
    .col-sm-9.content
        .pagetitle 优惠管理
        div
            a.operate#add(data-toggle="modal" data-target="#addModal") +新增
        table#table(width="100%",cellspacing="0")
        div.modal.fade#codeModal(tabindex="-1")
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 验证码管理
                    div.modal-body
                        div.youhui
                            div(style="float:left;line-height:36px;letter-spacing:1px;") 导入Excel表格:
                            input#fileUpload1.operate(type='file',name='file')
                        table#codeTable(width="100%",cellspacing="0")
        div.modal.fade#addModal(tabindex="-1")
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 新增优惠
                    div.modal-body
                        form.form-horizontal.userform#addForm(name="addForm")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 优惠名称:
                                div.col-sm-8
                                    input.form-control(type="text",name="name")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 开始时间:
                                div.col-sm-6
                                    .input-append.date.form_datetime.startTime
                                        input(size="24", type="text", name="startDate", readOnly)
                                        span.add-on
                                            i.icon-th.fa.fa-table.blue
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 结束时间:
                                div.col-sm-6
                                    .input-append.date.form_datetime.endTime
                                        input(size="24", type="text", name="endDate", readOnly)
                                        span.add-on
                                            i.icon-th.fa.fa-table.blue
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 类型:
                                div.col-sm-8
                                    select#select.form-control(name="type")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 通知内容:
                                div.col-sm-8
                                    textarea.form-control(name="content",col="40",row="15")
                            div.form-group.submitBtn
                                button.btn.btn-blue(type="submit") 确认
                                button.btn.btn-grey(data-dismiss="modal") 取消
        div.modal.fade#editModal(tabindex="-1")
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 编辑优惠
                    div.modal-body
                        form.form-horizontal.userform#editForm(name="editForm")
                            input.form-control(type='hidden',name='id')
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 优惠名称:
                                div.col-sm-8
                                    input.form-control(type="text",name="name")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 开始时间:
                                div.col-sm-8
                                    .input-append.date.form_datetime.startTime
                                        input(size="24", type="text", name="startDate", readOnly)
                                        span.add-on
                                            i.icon-th.fa.fa-table.blue
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 结束时间:
                                div.col-sm-8
                                    .input-append.date.form_datetime.endTime
                                        input(size="24", type="text", name="endDate", readOnly)
                                        span.add-on
                                            i.icon-th.fa.fa-table.blue
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 类型:
                                div.col-sm-8
                                    select#select2.form-control(name="type")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star
                                    span 通知内容:
                                div.col-sm-8
                                    textarea.form-control(name="content",col="40",row="15")
                            div.form-group.submitBtn
                                button.btn.btn-blue(type="submit") 确认
                                button.btn.btn-grey(data-dismiss="modal") 取消

    script(src="/admin/js/couponMgt.js")

extends ./layout
block head
    title 活动管理列表
    link(rel="stylesheet", href="/admin/css/index.css")
    //link(rel="stylesheet", href="/admin/css/manage.css")
    script(src="/admin/js/activityManage.js")
block body
    .col-xs-9.content
        .pagetitle 活动管理
        div.select-time
            a.operate#add(data-toggle="modal" data-target="#addModal") +新增
            //a.operate#lead(data-toggle="modal" data-target="#leadModal") 导入
            .username
                span 活动名称
                input#userName(size='20', type="text")
                button.btn.btn-blue#searchBtn(type="button") 查询
                button.btn.btn-blue#clearBtn(type="button") 清除查询
            a.operate.right#publish 首页发布
        table#businessTable(width="100%",cellspacing="0")
        div.modal.fade#infoModal(tabindex="-1")
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 活动详情
                    div.modal-body
                        table(cellspacing="0")
                            tbody#businessInfo.userInfo
                    div.modal-footer
                        button.btn.btn-blue#closeBtn(data-dismiss="modal") 关闭
        div.modal.fade#addModal(tabindex="-1")
            div.modal-dialog.modal-lg
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 活动添加
                    div.modal-body
                        form.form-horizontal.userform#addForm(name="addForm")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 活动名称:
                                div.col-sm-7
                                    input.objectid(type='hidden', name='objectid')
                                    input.isBan(type='hidden', name='isBan')
                                    input.form-control(type="text",name="title")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 图片:
                                div.col-sm-7.upload-box
                                    input.btn.input#input(type="file")
                                    button.btn.btn-blue.fakeInput#fakeInput(type="button")
                                        | 选择图片
                                    button.btn.btn-orange.uploadImg.disabled#uploadImg(type='button')
                                        | 上传图片
                                    span.upload-tip 图片上传成功
                                div.col-sm-offset-3.col-sm-9
                                    small *支持图片格式:"jpg,jpeg,png",建议图片宽高比为3:2,至少360px*240px；
                                div.col-sm-offset-3.col-sm-9
                                    input#realInput(type='hidden',name='image')
                            div.form-group.image-box
                                div.col-xs-7.col-xs-offset-1
                                    div(style="width:480px;height:320px;")
                                        img#image.cropImage(src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7")
                                div.col-xs-4
                                    div.page-header
                                        | 裁剪预览：
                                    div.preview(style="width:230px;height:153px;background:#eee;")
                                //div.col-sm-7
                                    //input#fileUpload.form-control(type="file",name='image')
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 时间:
                                div.col-sm-7
                                    span 活动时间:
                                        .input-append.date.form_datetime
                                            input(size="22", type="text", name='startTime', readOnly)
                                            span.add-on
                                                i.icon-th.fa.fa-table.blue
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 地址:
                                div.col-sm-7
                                    input.form-control(type="text",name="address")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 类别:
                                div.col-sm-7
                                    select#type.form-control(name="type")
                            div.form-group
                                label.col-sm-3.control-label
                                    span 地址连接:
                                div.col-sm-7
                                    input.form-control(type="text",name="details")
                            div.form-group
                                label.col-sm-3.control-label
                                    span 手机地址连接:
                                div.col-sm-7
                                    input.form-control(type="text",name="mobileUrl")
                            div.form-group
                                label.col-sm-3.control-label
                                    span 内容:
                                div.col-sm-7
                                    textarea#editor.form-control(rows="10",name="richText",width="100%")
                            div.form-group
                                label.col-sm-3.control-label
                                    span.star 是否需要登录后可查看:
                                div.col-sm-7.form-radio
                                    label
                                        input(type="radio",name="needLogin",value='1')
                                        |是
                                    label
                                        input(type="radio",name="needLogin",value='2' checked)
                                        |否
                            div.form-group.submitBtn
                                button.btn.btn-blue#submit(type="submit") 保存
                                button.btn.btn-grey(data-dismiss="modal") 取消
        div.modal.fade#leadModal(tabindex="-1")
            div.modal-dialog.modal-lg
                div.modal-content
                    div.modal-header
                        button.close(type="button", data-dismiss="modal")
                            span &times;
                        h4.modal-title 导入
                    div.modal-body
                        .row
                            .col-sm-5.text-right
                                span.control-label 上传：
                            .col-sm-7
                                    input#fileUpload1.form-control(type='file',name='file')
                    //div.modal-footer
                    //    button.btn.btn-blue#deleteBtn 确认
                    //    button.btn.btn-grey(data-dismiss="modal") 取消

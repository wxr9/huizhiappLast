extends ../layout
block head
    title  汇智卡
    link(href='/web/css/card.css', rel='stylesheet')
    script(src="/web/js/cardPay.js")
block body
    header.jumbotron-purple-sm.center-vertically-sm(role='banner')
        .container
            hr.pageTitleLine
            .pageTitleDiv
                span.pageTitle 汇智卡
            hr.pageTitleLine
    .container
        button.btn.btn-blue(data-toggle="modal" data-target="#bindModal") 充值
    div.modal.fade.pay#bindModal(tabindex="-1")
        div.modal-dialog.modal-sm
            div.modal-content
                div.modal-header
                    button.close(type="button", data-dismiss="modal")
                        span &times;
                    h4.modal-title 汇智卡充值
                div.modal-body
                    dl.row
                        dt.col-sm-4
                            img.img(src='/web/images/card.png')
                        dd.col-sm-8
                            form.form-horizontal#form(name="form",role="form",method="POST")
                                p 卡号
                                input.pw80.form-control(type='text' placeholder='0199***********',name='bankId')
                                p 密码
                                    span 初始密码为：身份证后6位
                                input.pw80.form-control(type='password' placeholder='0199***********',name='merId')

                                p 充值金额
                                ul#price
                                    li.active
                                        a ￥50
                                    li
                                        a ￥100
                                    li
                                        a ￥200
                                    li
                                        a ￥500
                                input.pw80.form-control(type='text',name='transactionData',value='50',style='display:none')
                                p 短信发送发票信息
                    div.bind
                        div.clearfix
                            h4 绑定您的汇智卡
                            button.close(type="button", data-dismiss="modal")
                                span &times;
                        p.tip 绑定后系统会自动填充您的汇智卡卡号和密码。
                        a.btn 立即绑定

                div.modal-footer
                    button.btn.btn-blue#bindCfm(type='button') 确定充值
                    button.btn.btn-grey(data-dismiss="modal") 取消

    include ../include/footer
extends ../layout
block head
    title  企业集中登记
    link(href='/web/css/serviceNew.css', rel='stylesheet')
    link(href='/web/css/serviceCenter.css', rel='stylesheet')
block body
    .html-title.service
    .container
        .bread-crumb
            span.icon
            a(href='/') 首页
            span &gt;
            a(href='/web/serviceCenter.html') 服务中心
            span &gt;
            a(href='javascript:void(0)') 企业集中登记
    .container.huntApply
        .col-xs-12
            p.msg#notice
        .col-xs-12
            form.form-horizontal#form(name="form",role="form")
                .col-xs-12
                    label.read
                        input#mustRead(type='checkbox',name='mustRead')
                        span 已阅读
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span 预约人：
                        .col-xs-7
                            input.form-control(type='text',name='chineseName', placeholder='请输入姓名')
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span E-mail：
                        .col-xs-7
                            input.form-control(type='text',name='email')
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span 公司名称：
                        .col-xs-7
                            input.form-control(type='text',name='company',placeholder="请输入公司名称")
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span 联系方式：
                        .col-xs-7
                            input.form-control(type='text',name='phone')
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span 租赁类别：
                        .col-xs-7.rent
                            label
                                input.ageLimit(type='radio',name='rentType',value='1',checked)
                                span 新租1年
                            label
                                input.ageLimit(type='radio', name='rentType',value='2')
                                span 续租1年
                            label
                                input.ageLimit(type='radio', name='rentType',value='3')
                                span 续租2年
                //.form-group
                //    .col-xs-12
                //        .col-xs-3.text-right.control-label
                //            span.star
                //            span 年限：
                //        .col-xs-7
                //            input.form-control(type='number',name='years')
                .form-group#datetimePicker
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span.star
                            span 时间选择：
                        .col-xs-7
                            span 预约时间:
                            .input-append.date.form_datetime
                                input(size="22", type="text", name='appointmentDate', readOnly)
                                span.add-on
                                    i.icon-th.fa.fa-table.blue
                            span (每周二、四下午)
                .form-group
                    .col-xs-12
                        .col-xs-3.text-right.control-label
                            span 备注：
                        .col-xs-7
                            textarea.form-control(type='text',name='memo',rows='5')
                .form-group
                    .col-xs-7.col-xs-offset-3.text-center
                        button.btn.btn-blue.submit(type='submit') 提交
